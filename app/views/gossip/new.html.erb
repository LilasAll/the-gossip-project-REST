<html>
<div class="card text-center mb-3">
  <div class="card-body">
  <body>

  <% if @gossip !=nil%>
  <div class="card text-white bg-danger mb-3">
      <% @gossip.errors.each do |attr, msg|  %>
      <%= attr %> <%= msg %>
      <% end %>
      <br/>
      <%= "Ton potin ne peut pas être vide, recommence!! " %>
  </div>
  <% end %>

    <div class="container">
      <h1> Soumets ton potin !</h1>
      <%= form_tag url_for(action: 'create'), method: "post" do %>
        <input type="hidden" name="authenticity_token" value= <%= form_authenticity_token %> >
        <br />
        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3 text-center font-weight-bold">
          <%= label_tag 'Ton Titre : ' %>
          </div>
          <div class="col-3">
          <%= text_field_tag 'gossip_title', value = nil, options = {style:"height:30px;width:300px"} %>
          </div>
        </div>     
        <br />

        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3 text-center font-weight-bold">
            <%= label_tag 'Ton Potin : ' %>
          </div>
          <div class="col-3">
            <%= text_field_tag 'gossip_content', value = nil, options = {style:"height:100px;width:300px;vertical-align:text-top"}%>
          </div>
        </div>
        <br />
        <%= submit_tag "Balance la sauce", class: 'btn btn-info btn-lg btn-submit'  %>
      <% end %>

    </div>
    <br/>
    <br/>
    <h4><strong>On t'écoute!</strong></h4>
    <img src="https://media.giphy.com/media/kFzvEFsLcMk6nDCLUg/giphy.gif">
  </body>
</div>
</div>
</html>

