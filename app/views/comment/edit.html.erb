<html>
  <body>
 	<div class="container">
      <h1> Editer le commentaire : </h1>
      <%= form_tag url_for(action: 'update'), method: "patch" do %>
        <input type="hidden" name="authenticity_token" value= <%= form_authenticity_token %> >
        <br />
        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3 text-center font-weight-bold">
          <%= label_tag 'Contenu du commentaire : ' %>
          </div>
          <div class="col-3">
          <%= text_field_tag 'title', @comment.content, options = {style:"height:30px;width:300px"} %>
          </div>
        </div>     
        <br />
        
        <%= submit_tag "Valider", class: 'btn btn-info btn-lg btn-submit'  %>
      <% end %>

    </div>
  </body>

</html>