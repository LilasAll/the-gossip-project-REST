<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-light">Bienvenue à toi !</h1>
    <center>
    <p class="lead text-white">Tu es ici car tu aimes les Gossips? les Potins? <br/>
    Tu veux pouvoir cracher sur tes amis? Tu es au bon endroit. Lache toi!</p>
     <a class="btn btn-info" <%= link_to "Soumettre un Gossip", new_gossip_path%></a>
    </center>
  </div>
</div>

<section>
<div class="card-deck">
<%Gossip.all.each do |gossip|%>
<div class="col-sm-3 mb-3">
<div class="card">
  <div class="card-header text-center font-weight-bold bg-info text-light">
    Gossip n°<%=gossip.id%>
  </div>
  <div class="card-body align-center">
    <blockquote class="blockquote mb-0">
      <p><%=gossip.title%></p>
      <footer class="blockquote-footer">
      <div class="row justify-content-between align-self-center mx-3">
      	<p><%=User.find(gossip.user_id).first_name%> <%=User.find(gossip.user_id).last_name%></p>
      	<a class="btn btn-info" <%= link_to "Voir", gossip_path(gossip.id)%></a>
      </div>
      </footer>
    </blockquote>
  </div>
</div>
</div>
<%end%>
</div>
</section>